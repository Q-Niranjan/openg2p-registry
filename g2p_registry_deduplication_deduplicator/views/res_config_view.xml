<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_updated_form" model="ir.ui.view">
        <field name="name">res_config_settings_updated_form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="g2p_registry_base.openg2p_inherit_res_config_settings_view_form" />
        <field name="arch" type="xml">
            <app name="g2p_config_settings" position="inside">
                <block
                    name="deduplication_deduplicator_setting_container"
                    title="G2P Registry Deduplicator Settings"
                >
                    <setting
                        string="Deduplicator Config"
                        help="Select the config to be used for deduplication"
                    >
                        <field name="deduplicator_config_id" />
                    </setting>
                </block>
            </app>
        </field>
    </record>
</odoo>
